/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.a {
    width: 50rpx;
    animation: btn  1s linear infinite;
}

@keyframes btn {
    0% {
        box-shadow: 0 0 0 0 red;        
    }
    50% {
        box-shadow: 0 0 0 10rpx red;                
    }
    100% {
        box-shadow: 0 0 0 0 red;                
    }
}