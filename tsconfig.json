{
    "compilerOptions": {
        "module": "umd",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": [
            "es2015",
            "es2015.promise"
        ]
    },
    "include": [
        "src/**/*.ts",
        "./package.json"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}